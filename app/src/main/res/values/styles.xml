<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CustomTextInputLayoutTheme">
        <item name="android:imeOptions">actionDone</item>
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/primary_light</item>
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColorHint">@color/primary_light</item>
    </style>

    <style name="CustomeRadio" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
